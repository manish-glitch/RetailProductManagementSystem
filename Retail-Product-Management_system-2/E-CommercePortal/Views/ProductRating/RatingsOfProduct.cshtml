@model IEnumerable<ProductRepository.Models.ProductRating>


@{
    ViewData["Title"] = "RatingsOfProduct";
}

<h1>RatingsOfProduct</h1>

<p>
    <a asp-action="AddProductRating">Add Rating</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RatingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RatingId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                
            </tr>
        }
    </tbody>
</table>
